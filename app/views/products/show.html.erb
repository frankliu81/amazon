<h1><%= @product.title %></h1>
<p><%= @product.description %></p>
<p>Price: $<%= "%.2f" % @product.price %></p>
<p>Category: <%= @product.category.name %></p>
<p>Create by: <%= @product.user_full_name.titleize %></p>
<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "Delete", product_path(@product), method: :delete,
                                              data: {confirm: "Are you sure?"} %>
<hr>

<%= @review.errors.full_messages.join(", ") %>

<hr>


<h2>Reviews</h2>
<% @product.reviews.each do |review| %>
  <!-- <%#= review.star_count %> star - -->
  <p>Create by: <%= @product.user_full_name.titleize %></p>

  <% i = 0%>
  <% while i < review.star_count do %>
    <i class="fa fa-star icon-yellow-star" aria-hidden="true"></i>
  	<%# <span style="font-size:100%;color:yellow;border-color:black">&starf;</span> %>
  	<% i += 1%>
  <% end %>

  <% while i < 5 do %>
    <i class="fa fa-star icon-gray-star" aria-hidden="true"></i>
    <%# <span style="font-size:100%;color:black;">&star;</span> %>
  	<% i += 1 %>
  <% end %>

  <%= review.body %>
  <%= link_to "delete", product_review_path(@product, review),
                data: {confirm: "Are you sure?"},
                method: :delete %>
  <hr>
<% end %>

