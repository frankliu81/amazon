<%= @product.errors.full_messages.join(", ") %>

<div class="container-new-or-edit-product">

<%= form_for @product, :html => {class: "form-horizontal"} do |f|  %>
  <div class="form-group">
    <%= f.label :title, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: "col-md-2 control-label" %>
    <%# collection_select(object, method, collection, value_method, text_method, options = {}, html_options = {}) public
     %>
     <%# second param, method instance, what you want to save to the database %>
     <div class="col-md-8">
       <%= f.collection_select :category_id, Category.order(:name), :id, :name, class: "form-control" %>
      </div>
  </div>

  <br>
  <div>
    <%= f.submit "Create Product", class: "btn btn-primary col-md-offset-2" %>
  </div>


<% end %>

</div>
